            <VBox prefHeight="290.0" prefWidth="220.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="222.0" style="-fx-alignment: center;" text="Pracownicy" />
                  <ListView fx:id="listViewEmployees" prefHeight="149.0" prefWidth="178.0" />
                  <TextField fx:id="fieldFirstName" promptText="imie" />
                  <TextField fx:id="fieldLastName" promptText="nazwisko" />
                  <TextField fx:id="fieldPhone" promptText="numer" />
                  <HBox prefHeight="30.0" prefWidth="220.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addNewEmployee" prefHeight="39.0" prefWidth="76.0" styleClass="buttonEmployeeOption" text="Dodaj" />
                        <Button mnemonicParsing="false" onAction="#updateEmployee" prefHeight="39.0" prefWidth="90.0" styleClass="buttonEmployeeOption" text="Aktualizuj" />
