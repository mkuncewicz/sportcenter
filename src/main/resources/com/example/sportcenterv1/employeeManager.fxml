               </children>
            </VBox>
         </children>
      </HBox>
      <VBox layoutX="658.0" layoutY="327.0" prefHeight="241.0" prefWidth="170.0">
         <children>
            <ListView fx:id="listViewSpecOfEmployee" prefHeight="200.0" prefWidth="160.0" />
