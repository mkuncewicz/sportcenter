               <children>
                  <Label fx:id="labelEmFirstName" prefHeight="17.0" prefWidth="160.0" text="IMIE:" />
                  <Label fx:id="labelEmLastName" prefHeight="17.0" prefWidth="160.0" text="NAZWISKO:" />
                  <Label fx:id="labelEmPhone" prefHeight="17.0" prefWidth="160.0" text="NR TEL:" />
