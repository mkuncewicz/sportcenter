         </children>
      </VBox>
      <VBox layoutX="1452.0" layoutY="191.0" prefHeight="328.0" prefWidth="200.0">
         <children>
            <Label prefHeight="21.0" prefWidth="202.0" style="-fx-alignment: center;" text="Specjalizacje" />
            <ListView fx:id="listViewSpecialization" prefHeight="200.0" prefWidth="200.0" />
            <TextField fx:id="fieldSpecName" promptText="nazwa" />
            <HBox prefHeight="41.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#addNewSpecialization" prefHeight="37.0" prefWidth="100.0" styleClass="buttonSpecializationOption" text="Stwórz" />
                  <Button mnemonicParsing="false" onAction="#deleteSpecialization" prefHeight="37.0" prefWidth="100.0" styleClass="buttonSpecializationOption" text="Usuń" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addSpecToEmployee" prefHeight="37.0" prefWidth="200.0" styleClass="buttonSpecializationOption" text="Dodaj do pracownika" />
         </children>
      </VBox>
   </children>
</AnchorPane>
