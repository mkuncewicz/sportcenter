<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainPane" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../../../css/reservationManager.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sportcenterv1.controller.ReservationController">
   <children>
      <Button layoutX="35.0" layoutY="35.0" mnemonicParsing="false" onAction="#handleBackToMenu" prefHeight="75.0" prefWidth="125.0" styleClass="backButton" text="Wróć" />
      <Button layoutX="1710.0" layoutY="35.0" mnemonicParsing="false" onAction="#setDarkMode" styleClass="buttonDarkMode" text="DarkMode" />
      <VBox layoutX="260.0" layoutY="140.0" prefHeight="800.0" prefWidth="1400.0" styleClass="res-con">
         <children>
            <Label alignment="CENTER" prefHeight="30.0" prefWidth="1400.0" text="Rezerwacje" />
            <HBox prefHeight="770.0" prefWidth="1400.0">
               <children>
                  <VBox prefHeight="770.0" prefWidth="400.0">
                     <children>
                        <HBox prefHeight="50.0" prefWidth="400.0">
                           <children>
                              <DatePicker fx:id="datePicker" prefHeight="41.0" prefWidth="200.0" promptText="Data rezerwacji" />
                              <ComboBox fx:id="comboboxhour" prefHeight="50.0" prefWidth="75.0" promptText="HH" />
                              <ComboBox fx:id="comboboxminute" prefHeight="50.0" prefWidth="75.0" promptText="MM" />
                              <Button mnemonicParsing="false" onAction="#clearDate" prefHeight="50.0" prefWidth="50.0" styleClass="clearButton" text="X" />
                           </children>
                        </HBox>
                        <ComboBox fx:id="comboboxStatusReservation" prefHeight="55.0" prefWidth="400.0" promptText="Status Rezerwacji">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ComboBox>
                        <HBox prefHeight="30.0" prefWidth="400.0">
                           <children>
                              <Label prefHeight="30.0" prefWidth="60.0" text="Klient" />
                              <TextField fx:id="textFieldCSearchClient" prefHeight="30.0" prefWidth="340.0" promptText="Szukaj klienta" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <ListView fx:id="listViewClient" prefHeight="200.0" prefWidth="355.0" styleClass="listviewSec" />
                        <HBox prefHeight="40.0" prefWidth="400.0">
                           <children>
                              <Label prefHeight="40.0" prefWidth="60.0" text="Oferta" />
                              <TextField fx:id="textFieldSearchOffer" prefHeight="30.0" prefWidth="187.0" promptText="Szukaj oferty">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </TextField>
                              <ComboBox fx:id="comboboxSpecForOffer" prefHeight="30.0" prefWidth="150.0" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <ListView fx:id="listViewOffer" prefHeight="200.0" prefWidth="200.0" styleClass="listviewSec" />
                        <ComboBox fx:id="comboboxEmployee" disable="true" prefHeight="70.0" prefWidth="400.0" promptText="Pracownik" />
                        <ComboBox fx:id="comboboxSpace" disable="true" prefHeight="70.0" prefWidth="400.0" promptText="Sala" />
                        <HBox prefHeight="140.0" prefWidth="400.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#createReservation" prefHeight="120.0" prefWidth="133.0" text="Dodaj" />
                              <Button mnemonicParsing="false" onAction="#updateReservation" prefHeight="120.0" prefWidth="133.0" text="Aktualizuj" />
                              <Button mnemonicParsing="false" onAction="#deleteReservation" prefHeight="120.0" prefWidth="133.0" text="Usuń" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="770.0" prefWidth="600.0">
                     <children>
                        <TextField fx:id="textFieldSearchReservation" prefHeight="40.0" promptText="Znajdz klienta" styleClass="textfieldsearch" />
                        <ListView fx:id="listViewReservation" prefHeight="730.0" prefWidth="600.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="770.0" prefWidth="400.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="30.0" prefWidth="400.0" text="Informacje" />
                        <Label fx:id="labelClient" prefWidth="400.0" text="Klient" />
                        <Label fx:id="labelOffer" prefWidth="400.0" text="Oferta" />
                        <Label fx:id="labelDate" prefWidth="400.0" text="Data" />
                        <Label fx:id="labelEmployee" prefWidth="400.0" text="Pracownik" />
                        <Label fx:id="labelSpace" prefWidth="400.0" text="Sala" />
                        <Label fx:id="labelStatus" prefWidth="400.0" text="Status" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="400.0" layoutY="85.0" prefHeight="30.0" prefWidth="1200.0" styleClass="errorLabel" />
   </children>
</AnchorPane>
