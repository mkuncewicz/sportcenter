<AnchorPane fx:id="mainPane" minHeight="1080.0" minWidth="1920.0" prefHeight="1080.0" prefWidth="1920.0" styleClass="root" stylesheets="@../../../css/spaceManagerStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sportcenterv1.controller.SpaceController">
   <children>
      <Button layoutX="25.0" layoutY="25.0" mnemonicParsing="false" onAction="#handleBackToMenu" prefHeight="75.0" prefWidth="125.0" styleClass="backButton" text="Wróć" />
      <VBox layoutX="100.0" layoutY="130.0" prefHeight="800.0" prefWidth="1000.0" styleClass="vbox-main">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="1000.0" styleClass="label-space" text="Obiekty" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ComboBox fx:id="comboCat" prefHeight="50.0" prefWidth="300.0" promptText="Wybierz typ obiektu" styleClass="combo-box-select" />
                  <ComboBox fx:id="comboboxspec" prefWidth="150.0" promptText="Szukaj po specjalizacjach" />
               </children>
            </HBox>
            <HBox fx:id="hboxTest" prefHeight="750.0" prefWidth="1000.0" styleClass="space-con">
               <children>
                  <VBox prefHeight="750.0" prefWidth="550.0">
                     <children>
                        <ListView fx:id="listViewSpaces" prefHeight="400.0" prefWidth="550.0" styleClass="listViewSpaces" />
                        <VBox fx:id="vboxFieldsMod" prefHeight="300.0" prefWidth="350.0" />
                        <HBox fx:id="buttonList" prefHeight="100.0" prefWidth="550.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#createNewSpace" prefHeight="100.0" prefWidth="275.0" text="Stwórz" />
                              <Button mnemonicParsing="false" onAction="#updateSpace" prefHeight="100.0" prefWidth="275.0" text="Aktualizuj" />
                           </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="550.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#deleteSpace" prefHeight="100.0" prefWidth="275.0" text="Usuń" />
                              <Button mnemonicParsing="false" onAction="#removeSpecializationFromSpace" prefHeight="100.0" prefWidth="275.0" text="Usuń specjalizacje" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="750.0" prefWidth="450.0">
                     <children>
                        <VBox fx:id="spaceDetails" prefHeight="400.0" prefWidth="440.0" />
                        <ListView fx:id="listViewSpecOfSpace" prefHeight="340.0" prefWidth="440.0" styleClass="listViewSpecOfSpace" />
                     </children></VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="1181.0" layoutY="235.0" prefHeight="450.0" prefWidth="500.0" styleClass="vbox-spec">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="500.0" styleClass="label-spec" text="Specialiazacje" />
            <ListView fx:id="listOfSpec" prefHeight="350.0" prefWidth="500.0" styleClass="listOfSpec" />
            <HBox prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#addSpecializationToSpace" prefHeight="50.0" prefWidth="500.0" text="Dodaj specjalizacje do obiektu" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button layoutX="1700.0" layoutY="25.0" mnemonicParsing="false" onAction="#setDarkMode" styleClass="buttonDarkMode" text="DarkMode" />
      <Label fx:id="errorLabel1" alignment="CENTER" layoutX="185.0" layoutY="70.0" prefHeight="30.0" prefWidth="797.0" styleClass="errorLabel" />
      <Label fx:id="errorLabel2" alignment="CENTER" layoutX="1186.0" layoutY="173.0" prefHeight="30.0" prefWidth="490.0" styleClass="errorLabel" />
   </children>
</AnchorPane>
